html, .container, #main{
		height: 100%;
		min-height: 100%;
	}
body {
	font-family: sans-serif;
	min-width: 500px;
	min-height: 100%;
}
.container {
		width: 100%;
		margin: 0 auto;
		/*background-color:rgb(102,255,102);*/
	}
#navbar{
		list-style-type: none;
		margin: 0;
		padding: 0;
		font-weight: bold;
		display: block;
		border-bottom: 1px solid rgb(240,240,240);
}

ul > li > ul {
	background: #fff;
	background:rgba(255,255,255,0);
	position:absolute;
	left:-9999px;
}
ul > li > ul > li{
	padding-top:1px;
	float:none;
}

ul > li > ul > a{
	white-space: nowrap;
}

ul > li:hover > ul#dropdown_menu{
	left:-30px;
}

ul li:hover a{
	text-decoration:underline;
}

ul li:hover ul a{
	text-decoration:none;
}



#navbar a{
	text-decoration: none;
	color: #777777;
}

#navbar li {
	display: inline-block;
	margin-right: 5%;
	position: relative;
}


#header_username, #header_logout, #header_signin{
	float: right;
	padding: 10px;
	padding-top: 20px;
}
#header_logo{
	color: #777777;
	font-size: 30px;
}
#header_search input[type='search']{
	width: 150px;
	display: none;
	height:35px;
	border: 1px solid rgb(230,230,230);
	padding: 3px;
	margin: 2px;
}
#header_search_button a{
	display: inline-block;
	height: 18px;
	width: 18px;
	background-image: url('ResponsiveNavSprites.png');
	background-position: -40px 122px;

}
form#login_form input[type='submit'] {
	width: 100%;
	height:35px;
	color: white;
	background:rgb(28,184,65);
	border-radius: 10px;
	border: 1px solid rgb(240,240,240);

}
form#login_form > input[type='text'] , input[type='password']{
	width: 100%;
	height:35px;
	
	border: 1px solid rgb(230,230,230);
	padding: 5px;
}

/*#main{
	background-color: rgba(102,255,102,.80);
	height: 100px;
	width:100%;
}*/
input[type="search"]:focus{
	border-color: #6EA2DE;
    box-shadow: 0px 0px 2px #6EA2DE;

}

@media only screen and (min-width : 768px){
	#header_search input[type="search"]{
		display: inline-block;
	}
	#header_search_button a {
		display:none;
	}
	
}

